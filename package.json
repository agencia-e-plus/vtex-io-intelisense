{
	"name": "vtexio-intellisense",
	"displayName": "VTEX IO Intellisense",
	"description": "snippets and autocomplete for vtex io blocks",
	"author": "e-Plus Agency",
	"license": "MIT",
	"version": "1.5.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/agencia-e-plus/vtex-io-intelisense"
	},
	"publisher": "AgenciaE-plus",
	"icon": "logo.png",
	"categories": [
		"Snippets",
		"Linters",
		"Other"
	],
	"keywords": [
		"vtex",
		"store-framework"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"workspaceContains:**/manifest.json"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"title": "vtexiointellisense",
			"properties": {
				"vtexiointellisense.allowsUnusedBlocks": {
					"type": "boolean",
					"default": true,
					"description": "Allows unused blocks in json files",
					"deprecationMessage": "Deprecated: Please use vtexiointellisense.duplicatedBlocks instead."
				},
				"vtexiointellisense.duplicatedBlocks": {
					"type": "boolean",
					"default": false,
					"description": "If true show a warning if finds a duplicated block in all workspace",
					"deprecationMessage": "Deprecated"
				},
				"vtexiointellisense.unusedBlocks": {
					"type": "boolean",
					"default": false,
					"description": "If true show a warning if finds a unused block in all workspace",
					"deprecationMessage": "Deprecated"
				},
				"vtexiointellisense.suggestions": {
					"type": "boolean",
					"default": false,
					"description": "If true, suggest all blocks declared in children and blocks props",
					"deprecationMessage": "Deprecated"
				},
				"vtexiointellisense.wraps": {
					"type": "array",
					"default": [
						{
							"title": "Wrap with responsive-layout.desktop",
							"component": "responsive-layout.desktop",
							"props": {
								"children": [
									"$blockName"
								]
							}
						},
						{
							"title": "Wrap with responsive-layout.mobile",
							"component": "responsive-layout.mobile",
							"props": {
								"children": [
									"$blockName"
								]
							}
						},
						{
							"title": "Wrap with responsive-layout.tablet",
							"component": "responsive-layout.tablet",
							"props": {
								"children": [
									"$blockName"
								]
							}
						},
						{
							"title": "Wrap with responsive-layout.phone",
							"component": "responsive-layout.phone",
							"props": {
								"children": [
									"$blockName"
								]
							}
						}
					],
					"description": "Wraps to be used in autocomplete"
				}
			}
		},
		"snippets": [
			{
				"language": "json",
				"path": "./snippets/io-blocks.code-snippets"
			},
			{
				"language": "jsonc",
				"path": "./snippets/io-blocks.code-snippets"
			},
			{
				"language": "scss",
				"path": "./snippets/io-styles.code-snippets"
			},
			{
				"language": "css",
				"path": "./snippets/io-styles.code-snippets"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": [
					"**/store/routes.json"
				],
				"url": "./schemas/routes/routes.schema.json"
			},
			{
				"fileMatch": [
					"**/store/**/*.jsonc",
					"**/store/**/*.json"
				],
				"url": "./schemas/vtexio.schema.json"
			},
			{
				"fileMatch": [
					"**/**/store/interfaces.json"
				],
				"url": "./schemas/custom-app/interfaces.schema.json"
			},
			{
				"fileMatch": [
					"**/edition/apps.json"
				],
				"url": "./schemas/edition-app/edition.schema.json"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "betterVtex",
					"title": "BetterVtex",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"betterVtex": [
				{
					"id": "components",
					"name": "Components"
				},
				{
					"id": "parents",
					"name": "Parents"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && yarn && cd ../server && yarn && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"release": {
		"repositoryName": "vtex-io-intelisense-v1",
		"branches": [
			"main"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			[
				"semantic-release-vsce",
				{
					"packageVsix": true,
					"publish": true
				}
			],
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "*.vsix",
							"label": "Extension File"
						}
					]
				}
			],
			"@semantic-release/changelog",
			"@semantic-release/git"
		]
	},
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/commit-analyzer": "^9.0.2",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^8.0.6",
		"@semantic-release/release-notes-generator": "^10.0.3",
		"@types/glob": "^7.2.0",
		"@types/hashmap": "^2.3.1",
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.13.0",
		"mocha": "^9.2.1",
		"semantic-release": "^19.0.5",
		"semantic-release-vsce": "^5.1.1",
		"typescript": "^4.7.2"
	},
	"dependencies": {
		"concat-map": "0.0.1",
		"glob": "^8.0.3",
		"jsonc-parser": "^3.1.0",
		"replace-in-file": "^6.3.5",
		"vscode-uri": "^3.0.3"
	}
}
