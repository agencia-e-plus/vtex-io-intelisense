{
	"name": "vtexio-intellisense",
	"displayName": "VTEX IO Intellisense",
	"description": "snippets and autocomplete for vtex io blocks",
	"repository": {
		"url": "https://github.com/pluslabeplus/vtex-io-intelisense"
	},
	"license": "MIT",
	"version": "0.2.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"publisher": "AgenciaE-plus",
	"icon": "logo.png",
	"keywords": [
		"vtex",
		"store-framework"
	],
	"categories": [
		"Snippets",
		"Linters",
		"Other"
	],
	"activationEvents": [
		"onLanguage:json",
		"onLanguage:jsonc"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"snippets": [
			{
				"language": "json",
				"path": "./snippets/io-blocks.code-snippets"
			},
			{
				"language": "jsonc",
				"path": "./snippets/io-blocks.code-snippets"
			},
			{
				"language": "scss",
				"path": "./snippets/io-styles.code-snippets"
			},
			{
				"language": "css",
				"path": "./snippets/io-styles.code-snippets"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": [
					"**/store/**/*.jsonc",
					"**/store/**/*.json"
				],
				"url": "./vtexio.schema.json"
			},
			{
				"fileMatch": [
					"**/**/store/interfaces.json"
				],
				"url": "./schemas/custom-app/interfaces.schema.json"
			},
			{
				"fileMatch": [
					"**/edition/apps.json"
				],
				"url": "./schemas/edition-app/edition.schema.json"
			}
		],
		"configuration": {
			"title": "vtexiointellisense",
			"properties": {
				"vtexiointellisense.allowsUnusedBlocks": {
					"type": "boolean",
					"default": true,
					"description": "Allows unused blocks in json files"
				}
			}
		},
		"configurationDefaults": {}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"glob": "^7.2.0",
		"jsonc-parser": "^3.0.0",
		"mocha": "^9.1.3",
		"ts-loader": "^9.2.5",
		"typescript": "^4.4.4",
		"webpack": "^5.64.4",
		"webpack-cli": "^4.8.0"
	}
}
