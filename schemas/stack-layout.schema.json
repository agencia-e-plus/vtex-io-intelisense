{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stack Layout",
  "description": "Stack Layout",
  "type": "object",
  "properties": {
    "children": {
      "type": "array",
      "items": { "$ref": "./shared/block.schema.json" }
    },
    "props": {
      "type": "object",
      "description": "Block's properties",
      "properties": {
        "zIndexOffset": {
          "type": "integer"
        },
        "blockClass": {
          "anyOf": [{ "type": "string" }, { "type": "array", "items": { "type": "string" } }]
        }
      }
    }
  }
}
