{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "block title",
	"description": "",
	"type": "object",
	"properties": {
		"title": {
			"type": "string",
			"description": "Title showed in site editor"
		},
		"props": {
			"type": "object",
			"description": "Block's properties",
			"properties": {
				"src": {
					"type": "string",
					"description": "Source address the iframe should render",
					"default": null
				},
				"width": {
					"type": ["number", "string"],
					"description": "Width attribute of the iframe",
					"default": null
				},
				"height": {
					"type": ["number", "string"],
					"description": "Height attribute of the iframe",
					"default": null
				},
				"allow": {
					"type": "string",
					"description": "allow attribute of the iframe",
					"default": null
				},
				"title": {
					"type": "string",
					"description": "title attribute of the iframe",
					"default": null
				},
				"blockClass": { "$ref": "./shared/blockClass.schema.json" }
			}
		}
	}
}
