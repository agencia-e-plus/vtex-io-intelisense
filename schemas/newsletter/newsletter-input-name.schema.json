{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "block title",
	"description": "",
	"type": "object",
	"properties": {
		"title": {
			"type": "string",
			"description": "Title showed in site editor"
		},
		"props": {
			"type": "object",
			"description": "Block's properties",
			"properties": {
				"placeholderText": {
					"type": "string",
					"description": "Placeholder text for the name input.",
					"default": "Enter your name"
				},
				"inputLabel": {
					"type": "string",
					"description": "Label for the name input.",
					"default": "null"
				},
				"errorMessage": {
					"type": "string",
					"description": "Error message to be shown if name input is empty.",
					"default": "Invalid name"
				}
			}
		}
	}
}
